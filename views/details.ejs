<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>

    <!-- Navbar Partial -->
    <%- include ("./partials/nav.ejs")  %>

    <div class="container">

        <div class="row">

            <!-- Post Content Column -->
            <div class="col-lg-8">

                <!-- Title -->
                <h1 class="mt-4"><%= post.title %> </h1>

                <!-- Author -->
                <p class="lead"> by
                    <% if (post.username) { %>
                        <%= post.username %> 
                        <%} else { %>
                        Anonymous
                        <% } %>
                </p>

                <hr>

                <!-- Date/Time -->
                <p>Posted on 
                    <%= post.createdAt%>
                </p>

                <hr>

                <!-- Post Content -->
                <p class="lead"><%= post.body %> </p>


            </div>
            <!-- /.row -->

        </div>

        <button class="btn btn-danger" type="button">Delete</button>

    </div>
    <!-- Footer -->
    <%- include ("./partials/footer.ejs") %>

</body>

</html>